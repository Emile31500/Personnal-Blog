{% extends 'base.html.twig' %}

{% block title %} {{ article.title }} {% endblock %}

{% block body %}
    <h2 class='my-5'> 
        {% if app.user %}
            {% if app.user.isAdmin %}
                <a href="/articles/{{article.id}}/edition"><button class="btn btn-primary"><i class="fa-solid fa-pen"></i></button></a>
            {% endif %}  
        {% endif %}        
              
    {{ article.title }} </h2>
    <div class='my-3'>
        {{ article.content | raw  }}
    </div>
{% endblock %}
