{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        
        <h2 class="h3 mb-3 my-5 font-weight-normal">Please sign in</h1>

        <div class="my-2">
            <label for="inputEmail">Email</label>
            <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="my-2">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary my-2" type="submit">
            Connexion
        </button>
        
        {% if error  %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
    </form>
{% endblock %}
